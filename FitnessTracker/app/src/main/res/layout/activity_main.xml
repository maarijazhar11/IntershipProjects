<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/step_count_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@android:color/black"
        android:text="0 steps"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/water_intake_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:text="Water Intake: 0 ml"
        android:layout_below="@id/step_count_textview"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add_water_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Water Intake"
        android:layout_below="@id/water_intake_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="addWaterIntake" />

</RelativeLayout>